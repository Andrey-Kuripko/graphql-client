<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<LangVersion>8</LangVersion>
		<Nullable>enable</Nullable>
		<PackageIcon>icon.png</PackageIcon>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageProjectUrl>https://github.com/graphql-dotnet/graphql-client.git</PackageProjectUrl>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/graphql-dotnet/graphql-client.git</RepositoryUrl>
		<RootNamespace>GraphQL</RootNamespace>
		<TargetFrameworks>netstandard1.0;netstandard2.0</TargetFrameworks>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<Version>2.0.0</Version>
		<WarningLevel>4</WarningLevel>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="$(MSBuildProjectDirectory)../../../LICENSE.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>LICENSE.txt</PackagePath>
			<Visible>false</Visible>
		</Content>
		<Content Include="$(MSBuildProjectDirectory)../../../assets/logo.64x64.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>icon.png</PackagePath>
			<Visible>false</Visible>
		</Content>
	</ItemGroup>
	
</Project>
